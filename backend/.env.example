# Application Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hydra_scraper

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLIC_KEY=your_supabase_public_key
SUPABASE_SECRET_KEY=your_supabase_secret_key

# Security & Encryption
ENCRYPTION_KEY=your_encryption_key_32_chars_min
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Redis Cache
REDIS_URL=redis://localhost:6379

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@hydrascraper.com
SMTP_FROM_NAME=HydraScraper

# Payment Configuration - Stripe
STRIPE_API_KEY=sk_test_your_stripe_api_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Pricing Plans (in USDT)
PLAN_BASIC_PRICE_USDT=15
PLAN_ENTERPRISE_PRICE_USDT=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Anti-Ban Protection
ANTI_BAN_MIN_DELAY_MS=2000
ANTI_BAN_MAX_DELAY_MS=5000

# Broadcast Module
BROADCAST_DELAY_MIN_MS=5000
BROADCAST_DELAY_MAX_MS=15000

# Message Queue
MESSAGE_QUEUE_BATCH_SIZE=10
MESSAGE_QUEUE_TIMEOUT_MS=30000

# Authentication
AUTH_BUFFER_FLUSH_INTERVAL_MS=10000
AUTH_MAX_RETRY_ATTEMPTS=3
AUTH_SESSION_TIMEOUT_MS=3600000

# PDF Generation
PDF_GENERATION_TIMEOUT_MS=30000
PDF_MAX_PAGES=500
PDF_QUALITY=high

# Audio Transcription
AUDIO_TRANSCRIPTION_TIMEOUT_MS=60000
AUDIO_MAX_FILE_SIZE_MB=100
AUDIO_SUPPORTED_FORMATS=mp3,wav,m4a,ogg

# Bookings Module
BOOKINGS_AUTO_CONFIRM_ENABLED=false
BOOKINGS_CONFIRMATION_TIMEOUT_MS=3600000
BOOKINGS_CANCELLATION_WINDOW_HOURS=24

# Catalog Module
CATALOG_CACHE_TTL_SECONDS=3600
CATALOG_MAX_ITEMS_PER_PAGE=50
CATALOG_SEARCH_INDEX_ENABLED=true

# Broadcast Module Advanced
BROADCAST_RETRY_ATTEMPTS=3
BROADCAST_RETRY_DELAY_MS=5000
BROADCAST_MAX_CONCURRENT_SENDS=10

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=hydra-scraper-bucket
AWS_S3_ACCESS_KEY_ID=your_aws_access_key
AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_CDN_URL=https://cdn.example.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=s3
BACKUP_ENCRYPTION_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=10

# Feature Flags
FEATURE_FLAG_NEW_UI=false
FEATURE_FLAG_ADVANCED_ANALYTICS=false
FEATURE_FLAG_BETA_API=false
FEATURE_FLAG_EMAIL_NOTIFICATIONS=true
FEATURE_FLAG_SMS_NOTIFICATIONS=false
FEATURE_FLAG_WEBHOOK_INTEGRATIONS=true

# External Services
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
ANALYTICS_TRACKING_ID=your_analytics_id

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs

# Monitoring & Health Check
HEALTH_CHECK_INTERVAL_MS=60000
METRICS_ENABLED=true
METRICS_PORT=9090

# Worker Threads
WORKER_THREADS_ENABLED=true
WORKER_THREADS_COUNT=4

# Request Validation
REQUEST_MAX_BODY_SIZE=10mb
REQUEST_TIMEOUT_MS=30000
